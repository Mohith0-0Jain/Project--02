<% layout("/layouts/boilerplate.ejs") %>
<body>
<div class="row mt-3">
    <div class="col-8 offset-2" >
    <h3>Create a new listing</h3>
    <form action="/listings" method="POST">
        <div class="mb-3">
            <lable for="title" class="form-label">Title</lable>
            <input type="text" name="listing[title]" placeholder="Add a catchy title" class="form-control">
        </div>

        <div class="mb-3">
            <lable  for="description" class="form-label">Description</lable>
            <textarea type="text" name="listing[description]" class="form-control"></textarea>
        </div>

        <div class="mb-3">
            <lable  for="image" class="form-label">Image URL</lable>
            <input type="text" name="listing[image]" placeholder="Enter image URL" class="form-control">
        </div>

        <div class="row">
            <div class="mb-3 col-md-4">
                <lable  for="price" class="form-label">Price</lable >
                <input type="number" name="listing[price]" placeholder="1200" class="form-control">
    
            </div>

            <div class="mb-3 col-md-8">
                <lable  for="country" class="form-label">Country</lable>
                <input type="text" name="listing[country]" placeholder="India" class="form-control">
            </div>
        </div>

        

        <div class="mb-3">
            <lable  for="location" class="form-label">Location</lable>
            <input type="text" name="listing[location]" placeholder="Lucknow,Uttar Pradesh"  class="form-control" >
        </div>
        
        <button class="btn btn-dark add-btn mt-3">Add</button>
    </form>
</div>
</div>
</body>
