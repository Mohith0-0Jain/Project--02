  .btn-search:hover {
    background-color: #fe424d;
    color: #ffff;
  }

  .btn-search {
    background-color: #fe424d;
    color: #ffff;
    border-radius: 25px;
    padding: 0 1rem 0 1rem;
  }

  .btn-search i {
    display: inline;
    margin-right: 0.5rem;
  }

  .search-input {
    border-radius: 20px;
    padding: 0.5rem 3rem 0.5rem 3rem;
  }
  .navbar-collapse {
  background-color: white; 
  padding: 7px; 
  border-radius: 5px;
}
