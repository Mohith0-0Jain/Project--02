<nav class="navbar navbar-expand-md bg-body-light border-bottom sticky-top">
  <div class="container-fluid">
    <a class="navbar-brand" href="/listings"><i class="fa-solid fa-ghost"></i></i></a>
    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse  navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav ">
        <a class="nav-link logo" href="/listings">WanderLust</a>
        </ul>
      </div>
      <div style="margin: auto;">
        <form class="d-flex" role="search" id="searchForm">
        <input class="form-control me-2 search-input" type="search" placeholder="Search destination" id="searchInput">
        <button class="btn btn-search" type="submit">
          <i class="fa-solid fa-magnifying-glass-location"></i>Search
        </button>
        </form>
        <script>
          let search=document.getElementById("searchForm");
          let input=document.getElementById("searchInput");
          search.addEventListener("submit", function(e) {
            e.preventDefault(); // Prevent default form submission
            const query = input.value.trim();
            if (query) {
              window.location.href = `/listings/${encodeURIComponent(query)}`; 
            }else{
              alert("Please enter a destination to search.");
            }
          });
        </script>
      </div>
      <div class="navbar-nav ms-auto">
        <a class="nav-link" href="/listings/new">Add your home</a>
        <% if (!currUser) { %>
        <a class="nav-link " href="/signup"><b>SignUp</b></a>
        <a class="nav-link" href="/login"><b>Login</b></a>
        <%} %>
        <% if (currUser) { %>
        <a class="nav-link" href="/logout"><b>Log Out</b></a>
        <%} %>
      </div>
    </div>
  </div>
</nav>